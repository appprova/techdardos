<h1>Games</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Challenger</th>
      <th>Challenged</th>
      <th>Challenger points</th>
      <th>Challenged points</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr id="game_<%= game.id %>">
        <td><%= game.challenger_name %></td>
        <td><%= game.challenged_name %></td>
        <td><%= game.challenger_points %></td>
        <td><%= game.challenged_points %></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Game', new_game_path, class: "btn btn-success" %>
